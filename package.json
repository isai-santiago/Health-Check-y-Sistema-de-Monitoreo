{
  "name": "api-health-check",
  "version": "1.0.0",
  "description": "API Health Check and Monitoring System",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev:server": "nodemon src/server.js",
    "dev:css": "npx tailwindcss -i ./src/styles/input.css -o ./public/styles.css --watch",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:css\"",
    "build:css": "npx tailwindcss -i ./src/styles/input.css -o ./public/styles.css",
    "test": "vitest"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.3.1",
    "express": "^4.18.2",
    "express-basic-auth": "^1.2.1",
    "helmet": "^7.1.0",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.4.19",
    "vitest": "^1.0.4"
  }
}
